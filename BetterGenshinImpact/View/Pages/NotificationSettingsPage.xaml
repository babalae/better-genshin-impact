                                  TextWrapping="Wrap" />
                    <ui:TextBox Grid.Row="0"
                                Grid.RowSpan="2"
                                Grid.Column="1"
                                MinWidth="180"
                                MaxWidth="800"
                                Margin="0,0,36,0"
                                Text="{Binding Config.NotificationConfig.WebhookEndpoint, Mode=TwoWay}"
                                TextWrapping="NoWrap" />
                </Grid>
                <Grid Margin="16">
