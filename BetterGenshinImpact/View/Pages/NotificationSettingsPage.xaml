                                  FontTypography="Body"
                                  Text="{local:Localize Key=notification.eventsToNotify}"
                                  TextWrapping="Wrap" />
                    <ui:TextBlock Grid.Row="1"
                                  Grid.Column="0"
                                  Foreground="{ui:ThemeResource TextFillColorTertiaryBrush}"
                                  Text="{local:Localize Key=notification.eventsToNotifyDescription}"
                                  TextWrapping="Wrap" />
                    <ui:TextBox Grid.Row="0"
