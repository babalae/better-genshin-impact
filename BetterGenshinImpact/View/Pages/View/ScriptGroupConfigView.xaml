                        <ui:TextBox Grid.Row="0"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    MinWidth="120"
                                    Text="{Binding PathingConfig.AutoFightConfig.Timeout}" />
                    </Grid>
                </StackPanel>
            </ui:CardExpander>

